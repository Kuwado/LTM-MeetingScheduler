{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/src/*.cpp",  // Biên dịch tất cả các file trong thư mục src
                "${workspaceFolder}/data/*.cpp", // Biên dịch tất cả các file trong thư mục data
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-lmysqlcppconn"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}